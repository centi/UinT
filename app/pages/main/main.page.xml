<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <GridLayout rows="auto, *">
    <TextField class="main-input" text="{{input.value}}" row="0" keyboardType="number" returnKeyType="done" />
    <ScrollView row="1">
      <Repeater items="{{converters}}">
        <Repeater.itemTemplate>
          <GridLayout class="converter" columns="auto, *, *, auto">
            <Label class="label label-from" text="{{label.from}}" col="0" />
            <Label class="value value-to" text="{{output.toRounded}}" col="1" />
            <Label class="value value-from" text="{{output.fromRounded}}" col="2" />
            <Label class="label label-to" text="{{label.to}}" col="3" />
          </GridLayout>
        </Repeater.itemTemplate>
      </Repeater>
    </ScrollView>
  </GridLayout>
</Page>
